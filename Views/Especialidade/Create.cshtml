@model Hospisim.Domain.Entities.Especialidade

@{
    ViewData["Title"] = "Nova Especialidade";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="fas fa-plus text-primary me-2"></i>Nova Especialidade
        </h1>
        <p class="text-muted mb-0">Cadastrar nova especialidade médica</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">
                            <i class="fas fa-stethoscope me-1"></i>Nome da Especialidade
                        </label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: Cardiologia, Pediatria, Ortopedia..." />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i>Salvar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-info-circle me-1"></i>Informações
                </h6>
            </div>
            <div class="card-body">
                <p class="text-muted mb-2">
                    <i class="fas fa-lightbulb me-1"></i>
                    <strong>Dica:</strong> Use nomes claros e específicos para as especialidades.
                </p>
                <p class="text-muted mb-0">
                    <i class="fas fa-users me-1"></i>
                    Após criar a especialidade, você poderá associar profissionais a ela.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
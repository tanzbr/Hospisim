@model IEnumerable<Hospisim.Domain.Entities.Especialidade>

@{
    ViewData["Title"] = "Especialidades";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="fas fa-stethoscope text-primary me-2"></i>Especialidades
        </h1>
        <p class="text-muted mb-0">Gerenciar especialidades médicas</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nova Especialidade
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Profissionais</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Nome</strong>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        @item.Profissionais.Count() profissionais
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-outline-info btn-sm" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-outline-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-stethoscope fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhuma especialidade cadastrada</h5>
                <p class="text-muted">Clique no botão "Nova Especialidade" para começar.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Nova Especialidade
                </a>
            </div>
        }
    </div>
</div> 
    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-clock me-2"></i>Atendimentos Recentes
                </h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">João Silva</h6>
                            <p class="mb-1 text-muted">Consulta - Dr. Maria Santos</p>
                            <small class="text-muted">Cardiologia</small>
                        </div>
                        <small class="text-muted">10:30</small>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Ana Costa</h6>
                            <p class="mb-1 text-muted">Emergência - Dr. Pedro Lima</p>
                            <small class="text-muted">Clínica Geral</small>
                        </div>
                        <small class="text-muted">09:45</small>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Carlos Oliveira</h6>
                            <p class="mb-1 text-muted">Consulta - Dra. Lucia Ferreira</p>
                            <small class="text-muted">Pediatria</small>
                        </div>
                        <small class="text-muted">09:15</small>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Index", "Atendimento")" class="btn btn-primary btn-sm">
                        Ver Todos os Atendimentos
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-bed me-2"></i>Internações Ativas
                </h6>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Maria Fernanda</h6>
                            <p class="mb-1 text-muted">UTI - Leito 05</p>
                            <small class="text-muted">Desde 15/01/2025</small>
                        </div>
                        <span class="badge bg-danger rounded-pill">Crítico</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Roberto Santos</h6>
                            <p class="mb-1 text-muted">Clínica Geral - Quarto 201</p>
                            <small class="text-muted">Desde 16/01/2025</small>
                        </div>
                        <span class="badge bg-warning rounded-pill">Estável</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">Lucia Pereira</h6>
                            <p class="mb-1 text-muted">Pediatria - Quarto 105</p>
                            <small class="text-muted">Desde 17/01/2025</small>
                        </div>
                        <span class="badge bg-success rounded-pill">Recuperando</span>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Index", "Internacao")" class="btn btn-primary btn-sm">
                        Ver Todas as Internações
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

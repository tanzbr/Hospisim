@model Hospisim.Domain.Entities.ProfissionalSaude

@{
    ViewData["Title"] = "Editar Profissional";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="fas fa-user-edit text-warning me-2"></i>Editar Profissional
        </h1>
        <p class="text-muted mb-0">Modificar dados do profissional de saúde</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="NomeCompleto" class="form-label">
                                <i class="fas fa-user me-1"></i>Nome Completo
                            </label>
                            <input asp-for="NomeCompleto" class="form-control" />
                            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="CPF" class="form-label">
                                <i class="fas fa-id-card me-1"></i>CPF
                            </label>
                            <input asp-for="CPF" class="form-control" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>E-mail Institucional
                            </label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefone" class="form-label">
                                <i class="fas fa-phone me-1"></i>Telefone
                            </label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="RegistroConselho" class="form-label">
                                <i class="fas fa-certificate me-1"></i>Registro do Conselho
                            </label>
                            <input asp-for="RegistroConselho" class="form-control" />
                            <span asp-validation-for="RegistroConselho" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="TipoRegistro" class="form-label">
                                <i class="fas fa-id-badge me-1"></i>Tipo de Registro
                            </label>
                            <select asp-for="TipoRegistro" class="form-select" asp-items="Html.GetEnumSelectList<Hospisim.Domain.Enums.TipoRegistro>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="TipoRegistro" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EspecialidadeId" class="form-label">
                            <i class="fas fa-stethoscope me-1"></i>Especialidade
                        </label>
                        <select asp-for="EspecialidadeId" class="form-select" asp-items="ViewBag.EspecialidadeId">
                            <option value="">Selecione uma especialidade...</option>
                        </select>
                        <span asp-validation-for="EspecialidadeId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="DataAdmissao" class="form-label">
                                <i class="fas fa-calendar me-1"></i>Data de Admissão
                            </label>
                            <input asp-for="DataAdmissao" class="form-control" type="date" />
                            <span asp-validation-for="DataAdmissao" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="CargaHorariaSemanal" class="form-label">
                                <i class="fas fa-clock me-1"></i>Carga Horária Semanal
                            </label>
                            <input asp-for="CargaHorariaSemanal" class="form-control" type="number" min="1" max="60" />
                            <span asp-validation-for="CargaHorariaSemanal" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="Turno" class="form-label">
                                <i class="fas fa-sun me-1"></i>Turno
                            </label>
                            <select asp-for="Turno" class="form-select" asp-items="Html.GetEnumSelectList<Hospisim.Domain.Enums.Turno>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Turno" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="Ativo" class="form-check-input" />
                            <label asp-for="Ativo" class="form-check-label">
                                <i class="fas fa-check-circle me-1"></i>Profissional Ativo
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Atualizar
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye me-1"></i>Ver Detalhes
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-info-circle me-1"></i>Informações
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    <strong>Atenção</strong>
                    <p class="text-muted mb-0 mt-1">Alterações podem afetar agendamentos futuros.</p>
                </div>
                
                <div class="mb-3">
                    <i class="fas fa-shield-alt text-info me-2"></i>
                    <strong>Privacidade</strong>
                    <p class="text-muted mb-0 mt-1">Dados protegidos pela LGPD.</p>
                </div>
                
                <div class="mb-0">
                    <i class="fas fa-history text-success me-2"></i>
                    <strong>Histórico</strong>
                    <p class="text-muted mb-0 mt-1">Alterações são registradas no sistema.</p>
                </div>
            </div>
        </div>
        
        <div class="card shadow mt-3">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-clipboard-list me-1"></i>Ações Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-1"></i>Ver Atendimentos
                    </a>
                    <a href="#" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-calendar me-1"></i>Agenda
                    </a>
                    <a href="#" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-chart-bar me-1"></i>Relatórios
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
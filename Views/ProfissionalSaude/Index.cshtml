@model IEnumerable<Hospisim.Domain.Entities.ProfissionalSaude>

@{
    ViewData["Title"] = "Profissionais de Saúde";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="fas fa-user-md text-primary me-2"></i>Profissionais de Saúde
        </h1>
        <p class="text-muted mb-0">Gerenciar profissionais do hospital</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Novo Profissional
        </a>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Nome</th>
                            <th>Especialidade</th>
                            <th>Registro</th>
                            <th>Turno</th>
                            <th>Status</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div>
                                        <strong>@item.NomeCompleto</strong>
                                        <br>
                                        <small class="text-muted">
                                            <i class="fas fa-envelope me-1"></i>@item.Email
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        @item.Especialidade?.Nome
                                    </span>
                                </td>
                                <td>
                                    <div>
                                        <strong>@item.RegistroConselho</strong>
                                        <br>
                                        <small class="text-muted">@item.TipoRegistro</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @item.Turno
                                    </span>
                                </td>
                                <td>
                                    @if (item.Ativo)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Ativo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times me-1"></i>Inativo
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-outline-info btn-sm" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-outline-warning btn-sm" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                           class="btn btn-outline-danger btn-sm" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Nenhum profissional cadastrado</h5>
                <p class="text-muted">Clique no botão "Novo Profissional" para começar.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Novo Profissional
                </a>
            </div>
        }
    </div>
</div> 
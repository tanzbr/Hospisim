@model Hospisim.Models.PacienteVM

@{
    ViewData["Title"] = "Editar Paciente";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="fas fa-user-edit text-warning me-2"></i>Editar Paciente
        </h1>
        <p class="text-muted mb-0">Modificar dados do paciente</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="NomeCompleto" class="form-label">
                                <i class="fas fa-user me-1"></i>Nome Completo
                            </label>
                            <input asp-for="NomeCompleto" class="form-control" />
                            <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="CPF" class="form-label">
                                <i class="fas fa-id-card me-1"></i>CPF
                            </label>
                            <input asp-for="CPF" class="form-control" placeholder="000.000.000-00" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="DataNascimento" class="form-label">
                                <i class="fas fa-calendar me-1"></i>Data de Nascimento
                            </label>
                            <input asp-for="DataNascimento" class="form-control" type="date" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="Sexo" class="form-label">
                                <i class="fas fa-venus-mars me-1"></i>Sexo
                            </label>
                            <select asp-for="Sexo" class="form-select" asp-items="Html.GetEnumSelectList<Hospisim.Domain.Enums.Sexo>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="TipoSanguineo" class="form-label">
                                <i class="fas fa-tint me-1"></i>Tipo Sanguíneo
                            </label>
                            <select asp-for="TipoSanguineo" class="form-select" asp-items="Html.GetEnumSelectList<Hospisim.Domain.Enums.TipoSanguineo>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="TipoSanguineo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefone" class="form-label">
                                <i class="fas fa-phone me-1"></i>Telefone
                            </label>
                            <input asp-for="Telefone" class="form-control" placeholder="(00) 00000-0000" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>E-mail
                            </label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EnderecoCompleto" class="form-label">
                            <i class="fas fa-map-marker-alt me-1"></i>Endereço Completo
                        </label>
                        <textarea asp-for="EnderecoCompleto" class="form-control" rows="2" placeholder="Rua, número, bairro, cidade, CEP"></textarea>
                        <span asp-validation-for="EnderecoCompleto" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NumeroCartaoSUS" class="form-label">
                                <i class="fas fa-id-badge me-1"></i>Número do Cartão SUS
                            </label>
                            <input asp-for="NumeroCartaoSUS" class="form-control" />
                            <span asp-validation-for="NumeroCartaoSUS" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="EstadoCivil" class="form-label">
                                <i class="fas fa-heart me-1"></i>Estado Civil
                            </label>
                            <select asp-for="EstadoCivil" class="form-select" asp-items="Html.GetEnumSelectList<Hospisim.Domain.Enums.EstadoCivil>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            <input asp-for="PossuiPlanoSaude" class="form-check-input" />
                            <label asp-for="PossuiPlanoSaude" class="form-check-label">
                                <i class="fas fa-shield-alt me-1"></i>Possui Plano de Saúde
                            </label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Atualizar
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye me-1"></i>Ver Detalhes
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-info-circle me-1"></i>Informações
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    <strong>Atenção</strong>
                    <p class="text-muted mb-0 mt-1">Verifique cuidadosamente os dados antes de salvar as alterações.</p>
                </div>
                
                <div class="mb-3">
                    <i class="fas fa-shield-alt text-info me-2"></i>
                    <strong>Privacidade</strong>
                    <p class="text-muted mb-0 mt-1">Todos os dados são protegidos pela LGPD.</p>
                </div>
                
                <div class="mb-0">
                    <i class="fas fa-history text-success me-2"></i>
                    <strong>Histórico</strong>
                    <p class="text-muted mb-0 mt-1">Alterações são registradas no sistema.</p>
                </div>
            </div>
        </div>
        
        <div class="card shadow mt-3">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-clipboard-list me-1"></i>Ações Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-1"></i>Ver Prontuários
                    </a>
                    <a href="#" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-plus me-1"></i>Novo Atendimento
                    </a>
                    <a href="#" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-file-medical me-1"></i>Histórico Médico
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
@model Hospisim.Models.PacienteVM
@{
    ViewData["Title"] = "Ficha do Paciente";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

<div class="card shadow-lg">
    <div class="card-header bg-primary bg-gradient text-white">
        <h3 class="mb-0">
            <i class="bi bi-person-badge me-2"></i>@Model.NomeCompleto
        </h3>
    </div>

    <div class="card-body">
        <div class="row row-cols-1 row-cols-md-2 g-3">
            <div class="col">
                <strong>CPF:</strong> @Model.CPF
            </div>
            <div class="col">
                <strong>Nascimento:</strong> @Model.DataNascimento:dd/MM/yyyy
            </div>
            <div class="col">
                <strong>Sexo:</strong> @Model.Sexo
            </div>
            <div class="col">
                <strong>Tipo Sanguíneo:</strong> @Model.TipoSanguineo
            </div>
            <div class="col">
                <strong>Telefone:</strong> @Model.Telefone
            </div>
            <div class="col">
                <strong>E-mail:</strong> @Model.Email
            </div>
            <div class="col-12">
                <strong>Endereço:</strong> @Model.EnderecoCompleto
            </div>
            <div class="col">
                <strong>Cartão SUS:</strong> @Model.NumeroCartaoSUS
            </div>
            <div class="col">
                <strong>Estado Civil:</strong> @Model.EstadoCivil
            </div>
            <div class="col">
                <strong>Plano de Saúde:</strong> @(Model.PossuiPlanoSaude ? "Sim" : "Não")
            </div>
        </div>
    </div>

    <div class="card-footer text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>

@model Hospisim.Models.PacienteVM
@{
    ViewData["Title"] = "Detalhes do Paciente";
}

<h2>Detalhes</h2>

<dl class="row">
    <dt class="col-sm-3">Nome</dt>
    <dd class="col-sm-9">@Model.NomeCompleto</dd>

    <dt class="col-sm-3">CPF</dt>
    <dd class="col-sm-9">@Model.CPF</dd>

    <dt class="col-sm-3">Nascimento</dt>
    <dd class="col-sm-9">@Model.DataNascimento.ToShortDateString()</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>

@model Hospisim.Domain.Entities.Internacao

@{
    ViewData["Title"] = "Editar Internação";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0">
            <i class="fas fa-edit text-warning me-2"></i>Editar Internação
        </h1>
        <p class="text-muted mb-0">Modificar dados da internação hospitalar</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit" method="post" asp-route-id="@Model.Id">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PacienteId" class="form-label">
                                <i class="fas fa-user-injured me-1"></i>Paciente
                            </label>
                            <select asp-for="PacienteId" class="form-select" asp-items="ViewBag.PacienteId">
                                <option value="">Selecione um paciente...</option>
                            </select>
                            <span asp-validation-for="PacienteId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="AtendimentoId" class="form-label">
                                <i class="fas fa-clipboard-list me-1"></i>Atendimento
                            </label>
                            <select asp-for="AtendimentoId" class="form-select" asp-items="ViewBag.AtendimentoId">
                                <option value="">Selecione um atendimento...</option>
                            </select>
                            <span asp-validation-for="AtendimentoId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DataEntrada" class="form-label">
                                <i class="fas fa-calendar-alt me-1"></i>Data e Hora de Entrada
                            </label>
                            <input asp-for="DataEntrada" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DataEntrada" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="PrevisaoAlta" class="form-label">
                                <i class="fas fa-calendar-check me-1"></i>Previsão de Alta
                            </label>
                            <input asp-for="PrevisaoAlta" class="form-control" type="date" />
                            <span asp-validation-for="PrevisaoAlta" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MotivoInternacao" class="form-label">
                            <i class="fas fa-notes-medical me-1"></i>Motivo da Internação
                        </label>
                        <textarea asp-for="MotivoInternacao" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="MotivoInternacao" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Setor" class="form-label">
                                <i class="fas fa-hospital me-1"></i>Setor
                            </label>
                            <select asp-for="Setor" class="form-select">
                                <option value="">Selecione...</option>
                                <option value="UTI">UTI</option>
                                <option value="Clínica Geral">Clínica Geral</option>
                                <option value="Cardiologia">Cardiologia</option>
                                <option value="Neurologia">Neurologia</option>
                                <option value="Pediatria">Pediatria</option>
                                <option value="Maternidade">Maternidade</option>
                                <option value="Cirurgia">Cirurgia</option>
                                <option value="Ortopedia">Ortopedia</option>
                            </select>
                            <span asp-validation-for="Setor" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="Quarto" class="form-label">
                                <i class="fas fa-door-open me-1"></i>Quarto
                            </label>
                            <input asp-for="Quarto" class="form-control" />
                            <span asp-validation-for="Quarto" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="Leito" class="form-label">
                                <i class="fas fa-bed me-1"></i>Leito
                            </label>
                            <input asp-for="Leito" class="form-control" />
                            <span asp-validation-for="Leito" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PlanoSaudeUtilizado" class="form-label">
                                <i class="fas fa-shield-alt me-1"></i>Plano de Saúde Utilizado
                            </label>
                            <input asp-for="PlanoSaudeUtilizado" class="form-control" />
                            <span asp-validation-for="PlanoSaudeUtilizado" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="StatusInternacao" class="form-label">
                                <i class="fas fa-info-circle me-1"></i>Status
                            </label>
                            <select asp-for="StatusInternacao" class="form-select" asp-items="Html.GetEnumSelectList<Hospisim.Domain.Enums.StatusInternacao>()">
                                <option value="">Selecione...</option>
                            </select>
                            <span asp-validation-for="StatusInternacao" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ObservacoesClinicas" class="form-label">
                            <i class="fas fa-clipboard me-1"></i>Observações Clínicas
                        </label>
                        <textarea asp-for="ObservacoesClinicas" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="ObservacoesClinicas" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Atualizar
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye me-1"></i>Ver Detalhes
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-1"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-info-circle me-1"></i>Informações
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    <strong>Atenção</strong>
                    <p class="text-muted mb-0 mt-1">Alterações podem afetar o histórico médico.</p>
                </div>
                
                <div class="mb-0">
                    <i class="fas fa-history text-success me-2"></i>
                    <strong>Histórico</strong>
                    <p class="text-muted mb-0 mt-1">Alterações são registradas no sistema.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HOSPISIM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospisim.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-hospital-alt me-2"></i>HOSPISIM
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-users me-1"></i>Pacientes
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Paciente" asp-action="Index">
                                    <i class="fas fa-list me-1"></i>Listar Pacientes</a></li>
                                <li><a class="dropdown-item" asp-controller="Paciente" asp-action="Create">
                                    <i class="fas fa-plus me-1"></i>Novo Paciente</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-md me-1"></i>Profissionais
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="ProfissionalSaude" asp-action="Index">
                                    <i class="fas fa-list me-1"></i>Listar Profissionais</a></li>
                                <li><a class="dropdown-item" asp-controller="ProfissionalSaude" asp-action="Create">
                                    <i class="fas fa-plus me-1"></i>Novo Profissional</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Especialidade" asp-action="Index">
                                    <i class="fas fa-stethoscope me-1"></i>Especialidades</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-clipboard-list me-1"></i>Atendimentos
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Atendimento" asp-action="Index">
                                    <i class="fas fa-list me-1"></i>Listar Atendimentos</a></li>
                                <li><a class="dropdown-item" asp-controller="Atendimento" asp-action="Create">
                                    <i class="fas fa-plus me-1"></i>Novo Atendimento</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-bed me-1"></i>Internações
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Internacao" asp-action="Index">
                                    <i class="fas fa-list me-1"></i>Listar Internações</a></li>
                                <li><a class="dropdown-item" asp-controller="Internacao" asp-action="Create">
                                    <i class="fas fa-plus me-1"></i>Nova Internação</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-sign-out-alt me-1"></i>Altas Hospitalares
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="AltaHospitalar" asp-action="Index">
                                    <i class="fas fa-list me-1"></i>Listar Altas</a></li>
                                <li><a class="dropdown-item" asp-controller="AltaHospitalar" asp-action="Create">
                                    <i class="fas fa-plus me-1"></i>Nova Alta</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid mt-3">
        <!-- Mensagens de Feedback -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                <i class="fas fa-info-circle me-2"></i>@TempData["Info"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-5">
        <div class="container-fluid py-3">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - <strong>HOSPISIM</strong> - Hospital Vida Plena</p>
                </div>
                <div class="col-md-6 text-end">
                    <small>Sistema de Gestão Hospitalar</small>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
